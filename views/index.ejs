  <script>
    (function () {
      if (!window.Chart) return;
      Chart.defaults.color = 'rgba(233, 230, 218, 0.74)';
      Chart.defaults.borderColor = 'rgba(233, 230, 218, 0.08)';
      Chart.defaults.font.family = '"Space Grotesk", sans-serif';

      function formatCompact(n) {
        var v = Number(n);
        if (!Number.isFinite(v)) return String(n || '0');
        if (v >= 1e9) return (v / 1e9).toFixed(1).replace(/\.0$/, '') + 'b';
        if (v >= 1e6) return (v / 1e6).toFixed(1).replace(/\.0$/, '') + 'm';
        if (v >= 1e3) return (v / 1e3).toFixed(1).replace(/\.0$/, '') + 'k';
        return String(Math.round(v));
      }

      function clamp(n, a, b) {
        var v = Number(n);
        if (!Number.isFinite(v)) return a;
        return Math.max(a, Math.min(b, v));
      }
      function bumpSeries(series, maxDelta) {
        var out = series.slice(1);
        var last = series[series.length - 1];
        var d = (Math.random() - 0.45) * maxDelta;
        out.push(clamp(last + d, 0, 9999));
        return out;
      }
      var labels = ['-24h', '-20h', '-16h', '-12h', '-8h', '-4h', 'now'];
      var conn = [620, 710, 760, 820, 940, 880, 1020];
      var q4h = [1100000, 1300000, 1250000, 1400000, 1550000, 1480000, 1650000];
      var connValEl = document.getElementById('home-metric-connections');
      var qValEl = document.getElementById('home-metric-queries');
      function setMetric(el, n, suffix) {
        if (!el) return;
        el.innerHTML = String(n) + ' <span>' + suffix + '</span>';
      }

      function sum(arr) {
        var s = 0;
        for (var i = 0; i < arr.length; i++) s += Number(arr[i]) || 0;
        return s;
      }
      var connCanvas = document.getElementById('homeConnectionsChart');
      var qCanvas = document.getElementById('homeQueriesChart');
      var connCtx = connCanvas ? connCanvas.getContext('2d') : null;
      var qCtx = qCanvas ? qCanvas.getContext('2d') : null;
      var connChart = connCtx ? new Chart(connCtx, {
        type: 'line',
        data: {
          labels: labels,
          datasets: [{
            data: conn,
            borderColor: '#39c6ff',
            backgroundColor: 'rgba(57, 198, 255, 0.10)',
            borderWidth: 2,
            fill: true,
            tension: 0.4,
            pointRadius: 0
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          layout: { padding: { left: 6, right: 12, top: 0, bottom: 0 } },
          plugins: { legend: { display: false }, tooltip: { enabled: false } },
          scales: {
            x: { grid: { display: false }, ticks: { font: { size: 10 }, maxRotation: 0, autoSkip: false } },
            y: {
              grid: { color: 'rgba(233, 230, 218, 0.05)' },
              ticks: { font: { size: 10 }, maxTicksLimit: 4, callback: function (value) { return value; } }
            }
          }
        }
      }) : null;
      var qChart = qCtx ? new Chart(qCtx, {
        type: 'line',
        data: {
          labels: labels,
          datasets: [{
            data: q4h,
            borderColor: '#2ed3a1',
            backgroundColor: 'rgba(46, 211, 161, 0.10)',
            borderWidth: 2,
            fill: true,
            tension: 0.4,
            pointRadius: 0
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          layout: { padding: { left: 6, right: 12, top: 0, bottom: 0 } },
          plugins: { legend: { display: false }, tooltip: { enabled: false } },
          scales: {
            x: { grid: { display: false }, ticks: { font: { size: 10 }, maxRotation: 0, autoSkip: false } },
            y: {
              grid: { color: 'rgba(233, 230, 218, 0.05)' },
              ticks: { font: { size: 10 }, maxTicksLimit: 4, callback: function (value) { return formatCompact(value); } }
            }
          }
        }
      }) : null;

      setMetric(connValEl, Math.round(conn[conn.length - 1]), 'peak');
      setMetric(qValEl, formatCompact(sum(q4h)), '/day');
      var reduceMotion = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (reduceMotion) return;
      setInterval(function () {
        conn = bumpSeries(conn, 95);
        q4h = bumpSeries(q4h, 240000);
        setMetric(connValEl, Math.round(conn[conn.length - 1]), 'peak');
        setMetric(qValEl, formatCompact(sum(q4h)), '/day');
        if (connChart) {
          connChart.data.datasets[0].data = conn;
          connChart.update('none');
        }
        if (qChart) {
          qChart.data.datasets[0].data = q4h;
          qChart.update('none');
        }
      }, 1800);
    })();
  </script>

